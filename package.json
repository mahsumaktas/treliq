{
  "name": "treliq",
  "version": "0.4.0",
  "description": "AI-Powered PR Triage for Open Source Maintainers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "treliq": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "ts-node src/index.ts",
    "cli": "ts-node src/cli.ts",
    "test": "jest",
    "lint": "eslint src/",
    "start": "node dist/index.js",
    "dashboard": "npx tsx src/cli.ts scan -r openclaw/openclaw -m 50 -f json > dashboard/demo.json"
  },
  "homepage": "https://mahsumaktas.github.io/treliq/",
  "bugs": {
    "url": "https://github.com/mahsumaktas/treliq/issues"
  },
  "keywords": [
    "pr-triage",
    "github",
    "ai",
    "dedup",
    "scoring",
    "maintainer-tools",
    "typescript",
    "pull-request",
    "open-source",
    "gemini",
    "openai",
    "anthropic",
    "multi-provider"
  ],
  "author": "Mahsum Akta≈ü <mahsum@mahsumaktas.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahsumaktas/treliq.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@lancedb/lancedb": "^0.15.0",
    "@octokit/auth-app": "^8.2.0",
    "@octokit/graphql": "^9.0.3",
    "@octokit/rest": "^21.0.0",
    "@octokit/webhooks": "^14.2.0",
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "fastify": "^5.7.4",
    "node-cron": "^4.2.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0"
  }
